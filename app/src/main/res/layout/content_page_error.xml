<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/page_error_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_internet_error"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/page_error_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加载失败,请重新加载"
        app:layout_constraintEnd_toEndOf="@+id/page_error_iv"
        app:layout_constraintStart_toStartOf="@+id/page_error_iv"
        app:layout_constraintTop_toBottomOf="@+id/page_error_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>