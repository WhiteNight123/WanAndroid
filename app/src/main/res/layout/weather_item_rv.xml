<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/weather_hour_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="晴"
        app:layout_constraintEnd_toEndOf="@+id/weather_hour_time"
        app:layout_constraintStart_toStartOf="@+id/weather_hour_time"
        app:layout_constraintTop_toBottomOf="@+id/weather_hour_time" />

    <TextView
        android:id="@+id/weather_hour_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text="08:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_hour_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="-5°C"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/weather_hour_time"
        app:layout_constraintStart_toStartOf="@+id/weather_hour_time"
        app:layout_constraintTop_toBottomOf="@+id/weather_hour_weather" />

</androidx.constraintlayout.widget.ConstraintLayout>