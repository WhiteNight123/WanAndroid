<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/fragment_rank_tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="1"
        android:textColor="@color/purple_200"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fragment_rank_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="hahahah"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_rank_tv_rank"
        app:layout_constraintStart_toEndOf="@+id/fragment_rank_tv_rank"
        app:layout_constraintTop_toTopOf="@+id/fragment_rank_tv_rank" />

    <TextView
        android:id="@+id/fragment_rank_tv_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="12354"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_rank_tv_rank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_rank_tv_rank" />

</androidx.constraintlayout.widget.ConstraintLayout>