<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_tv_register_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="账号"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_et_register_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_et_register_account" />

    <TextView
        android:id="@+id/fragment_tv_register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="密码"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_et_register_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_et_register_password" />

    <TextView
        android:id="@+id/fragment_tv_register_repassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="密码"

        app:layout_constraintBottom_toBottomOf="@+id/fragment_et_register_repassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fragment_et_register_repassword" />

    <EditText
        android:id="@+id/fragment_et_register_account"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:hint="请输入账号"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_tv_register_account"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/fragment_et_register_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="请输入密码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_tv_register_password"
        app:layout_constraintTop_toBottomOf="@+id/fragment_et_register_account" />

    <EditText
        android:id="@+id/fragment_et_register_repassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:hint="请再次输入密码"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fragment_tv_register_repassword"
        app:layout_constraintTop_toBottomOf="@+id/fragment_et_register_password" />

    <Button
        android:id="@+id/fragment_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="注册"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_et_register_repassword" />


</androidx.constraintlayout.widget.ConstraintLayout>