<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/home_tv_rv_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="作者"
        app:layout_constraintStart_toStartOf="@+id/home_tv_rv_content"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_tv_rv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="2021.12.32"
        app:layout_constraintEnd_toEndOf="@+id/home_tv_rv_content"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/home_tv_rv_author"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_tv_rv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxEms="17"
        android:singleLine="true"
        android:text="板载"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/home_tv_rv_content"
        app:layout_constraintTop_toBottomOf="@+id/home_tv_rv_author" />

    <TextView
        android:id="@+id/home_tv_rv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:maxLines="3"
        android:text="板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载板载"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_tv_rv_title" />

    <TextView
        android:id="@+id/home_tv_rv_chaptername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="栏目"
        app:layout_constraintStart_toStartOf="@+id/home_tv_rv_content"
        app:layout_constraintTop_toBottomOf="@+id/home_tv_rv_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_unlike"
        app:layout_constraintEnd_toEndOf="@+id/home_tv_rv_content"
        app:layout_constraintTop_toBottomOf="@+id/home_tv_rv_content" />

</androidx.constraintlayout.widget.ConstraintLayout>